{% comment %}
  Accordion Block - Collapsible content container
{% endcomment %}

<details 
  class="accordion"
  {% if block.settings.open_by_default %}open{% endif %}
  {{ block.shopify_attributes }}
>
  <summary class="accordion__summary" role="button" aria-expanded="{% if block.settings.open_by_default %}true{% else %}false{% endif %}">
    <h3 class="accordion__title {{ block.settings.heading_size }}">
      {% if block.settings.heading != blank %}
        {{ block.settings.heading }}
      {% else %}
        Accordion
      {% endif %}
    </h3>
    <div class="accordion__icon" aria-hidden="true">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="6,9 12,15 18,9"></polyline>
      </svg>
    </div>
  </summary>
  
  <div class="accordion__content" role="region">
    {% if block.blocks.size > 0 %}
      {% content_for 'blocks' %}
    {% else %}
      <div class="accordion__placeholder">
        <p>Add content blocks to this accordion.</p>
      </div>
    {% endif %}
  </div>
</details>

{% schema %}
{
  "name": "Accordion",
  "blocks": [{ "type": "@theme" }],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Accordion title",
      "default": "Accordion"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "text-lg", "label": "Large" },
        { "value": "text-xl", "label": "XL" },
        { "value": "text-2xl", "label": "2XL" },
        { "value": "text-lg lg:text-xl", "label": "Large / desktop XL" },
        { "value": "text-xl lg:text-2xl", "label": "XL / desktop 2XL" },
        { "value": "text-xl lg:text-3xl", "label": "XL / desktop 3XL" }
      ],
      "default": "text-xl"
    },
    {
      "type": "checkbox",
      "id": "open_by_default",
      "label": "Open by default",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "FAQ Item",
      "settings": {
        "heading": "Frequently Asked Question"
      },
      "blocks": [
        {
          "type": "rich-text",
          "settings": {
            "content": "<p>Your answer goes here. You can include multiple paragraphs and formatting.</p>"
          }
        }
      ]
    },
    {
      "name": "Accordion"
    }
  ]
}
{% endschema %} 